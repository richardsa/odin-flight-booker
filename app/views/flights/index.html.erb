<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Richie's Flight Booker</h1>

    <%= form_tag root_url, method: 'get' do %>
      <%= label_tag( "From:") %>
      <%= select_tag(:from_airport_id, options_for_select(@airport_options) ) %>
      <%= label_tag("To:") %>
      <%= select_tag(:airport_id, options_for_select(@airport_options)) %>
      <%= label_tag("Number of Passengers:") %>
      <%= select_tag :number_of_passengers, options_for_select({"1" => 1, "2" => 2, "3" => 3, "4" => 4}) %>
      <%= label_tag("Date:") %> 
      <%= select_tag(:start, options_for_select(@dates)) %>
      <br />
      <%= submit_tag "Search", class: "btn btn-xs btn-primary" %>
    <% end %>
</div>
</div>


<% if !@flights.nil? %>
    <% if !@flights.empty? %>
        <%= form_tag root_url, method: :get do %>
            <div class="row" id="flights-form">
              <div class="col-md-8 col-md-offset-2" style="margin-top:100px;">
                <table class="table table-striped table-bordered">
                  <thead>
                  <tr>
                    <th></th>
                    <th>Flight ID</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Passengers</th>
                    <th>Departure</th>
                    <th>Destination</th>
                    </tr>
                  </thead>
                  <tbody>
                  <% @flights.each do |f| %>
                      <tr>
                        <td><%= radio_button_tag(:flight_selected, f.id, checked: f) %></td>
                        <td><%= f.id %></td>
                        <td><%= f.start.strftime("%m/%d/%Y") %></td>
                         <td><%= f.start.strftime("%H:%m") %></td>
                         <td>Number</td>
                        <td><%= f.from_airport.code %></td>
                        <td><%= f.to_airport.code %></td>
                        
                      </tr>
                  <% end %>
                  </tbody>
                </table>
                
                <%= submit_tag("Order", class: "form-control btn btn-primary btn-block search-btn", id: 'order-btn') %>
              </div>
            </div>
        <% end %>
    <% end %>
<% end %>
